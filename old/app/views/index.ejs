<body>
    <!-- LOGIN DIALOG-->
    <dialog class="mdl-dialog">
        
        
        <h4 class="mdl-dialog__title">Sign in</h4>
        <div class="mdl-dialog__content">
            <p id="erroLogin">error</p>

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <input class="mdl-textfield__input" type="text" id="loginEmail">
                <label class="mdl-textfield__label" for="loginEmail">E-mail</label>
            </div>

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <input class="mdl-textfield__input" type="password" id="loginPassword">
                <label class="mdl-textfield__label" for="loginPassword">Senha</label>
            </div>


        </div>
        <div class="mdl-dialog__actions">
            <button id="loginButton" type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect">Sign In
            </button>
            <!-- Simple MDL Progress Bar -->
            <div id="loginProgress" class="mdl-progress mdl-js-progress"></div>
        </div>
    </dialog>


    <div class="login-cover">
        <!-- MDL spiner component -->
        <div class="page-loader mdl-spinner mdl-js-spinner is-active"></div>
    </div>

    <!-- Main content-->

    <div class="mdl-layout mdl-js-layout">
        <header class="mdl-layout__header">
            <div class="mdl-layout-icon"></div>
            <div class="mdl-layout__header-row">
                <span class="mdl-layout__title">IoTretas
                    <span class="page-title-span"> | </span>
                    <span class="page-title-span">HOME </span>
                </span>
                <div class="mdl-layout-spacer"></div>
                <nav class="mdl-navigation">
                    <!-- Colored raised button -->
                    <button id="signOut" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect">
                        Pegue o beco
                        <i class="button-right-icon  material-icons">account_circle</i>
                    </button>

                </nav>
            </div>
        </header>

        <!-- menu side bar-->
        <div class="mdl-layout__drawer mdl-layout__drawer mdl-color--blue-grey-900 mdl-color-text--blue-grey-50 ">
            <div class="mdl-grid">
                <div class="mdl-cell mdl-cell--2-col"></div>
                <div>
                    <button id="CreatThing" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored">
                        <i class="material-icons">add</i>
                    </button>
                </div>
                <div class="mdl-cell mdl-cell--4-col"></div>
            </div>

        </div>

        <!-- exemplo de card-coisa-->
        <main class="mdl-layout__content">
            <div class="mdl-layout__tab-panel is-active"  id="container">
            </div>
         </main>
    </div>

